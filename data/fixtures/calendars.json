{
  "standard": {
    "description": "Mon-Fri 08:00-17:00, no exceptions",
    "rules": {
      "0": [["08:00", "17:00"]],
      "1": [["08:00", "17:00"]],
      "2": [["08:00", "17:00"]],
      "3": [["08:00", "17:00"]],
      "4": [["08:00", "17:00"]]
    },
    "exceptions": {}
  },

  "holiday": {
    "description": "Mon-Fri 08:00-17:00, Tuesday 2025-01-07 holiday",
    "rules": {
      "0": [["08:00", "17:00"]],
      "1": [["08:00", "17:00"]],
      "2": [["08:00", "17:00"]],
      "3": [["08:00", "17:00"]],
      "4": [["08:00", "17:00"]]
    },
    "exceptions": {
      "2025-01-07": [{"is_working": false}]
    }
  },

  "simple": {
    "description": "Mon-Fri 08:00-17:00, Tue holiday + Sat overtime 10:00-14:00",
    "rules": {
      "0": [["08:00", "17:00"]],
      "1": [["08:00", "17:00"]],
      "2": [["08:00", "17:00"]],
      "3": [["08:00", "17:00"]],
      "4": [["08:00", "17:00"]]
    },
    "exceptions": {
      "2025-01-07": [{"is_working": false}],
      "2025-01-11": [{"is_working": true, "start": "10:00", "end": "14:00"}]
    }
  },

  "split_shift": {
    "description": "Monday only: two periods 06:00-10:00 and 14:00-18:00",
    "rules": {
      "0": [["06:00", "10:00"], ["14:00", "18:00"]]
    },
    "exceptions": {}
  },

  "overnight": {
    "description": "Monday night shift 22:00-06:00",
    "rules": {
      "0": [["22:00", "06:00"]]
    },
    "exceptions": {}
  },

  "overnight_consecutive": {
    "description": "Mon+Tue night shifts 22:00-06:00",
    "rules": {
      "0": [["22:00", "06:00"]],
      "1": [["22:00", "06:00"]]
    },
    "exceptions": {}
  },

  "overnight_midnight": {
    "description": "Monday 23:00-00:00 edge case",
    "rules": {
      "0": [["23:00", "00:00"]]
    },
    "exceptions": {}
  },

  "partial_day": {
    "description": "Mon 08:00-17:00 with partial day: holiday then 08:00-12:00 override",
    "rules": {
      "0": [["08:00", "17:00"]]
    },
    "exceptions": {
      "2025-01-06": [
        {"is_working": false},
        {"is_working": true, "start": "08:00", "end": "12:00"}
      ]
    }
  },

  "multi_exception": {
    "description": "Mon 08:00-17:00 with remove-day + add 09:00-12:00 + 14:00-16:00",
    "rules": {
      "0": [["08:00", "17:00"]]
    },
    "exceptions": {
      "2025-01-06": [
        {"is_working": false},
        {"is_working": true, "start": "09:00", "end": "12:00"},
        {"is_working": true, "start": "14:00", "end": "16:00"}
      ]
    }
  },

  "saturday_holiday": {
    "description": "Mon-Fri 08:00-17:00 with Saturday marked as holiday (no-op)",
    "rules": {
      "0": [["08:00", "17:00"]],
      "1": [["08:00", "17:00"]],
      "2": [["08:00", "17:00"]],
      "3": [["08:00", "17:00"]],
      "4": [["08:00", "17:00"]]
    },
    "exceptions": {
      "2025-01-11": [{"is_working": false}]
    }
  }
}
