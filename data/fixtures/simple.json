{
  "id": "simple",
  "description": "Mon-Fri 08:00-17:00, Tuesday 2025-01-07 holiday, Saturday 2025-01-11 overtime 10:00-14:00",
  "epoch": "2025-01-06T00:00:00",
  "horizon": {
    "start": "2025-01-06T00:00:00",
    "end": "2025-01-13T00:00:00"
  },
  "calendar": {
    "rules": {
      "0": [["08:00", "17:00"]],
      "1": [["08:00", "17:00"]],
      "2": [["08:00", "17:00"]],
      "3": [["08:00", "17:00"]],
      "4": [["08:00", "17:00"]]
    },
    "exceptions": {
      "2025-01-07": [{"is_working": false}],
      "2025-01-11": [{"is_working": true, "start": "10:00", "end": "14:00"}]
    }
  },
  "tests": {
    "forward_walk": [
      {
        "id": "within_day",
        "start": "2025-01-06T08:00:00",
        "minutes": 60,
        "expected": "2025-01-06T09:00:00"
      },
      {
        "id": "across_holiday",
        "start": "2025-01-06T16:30:00",
        "minutes": 60,
        "expected": "2025-01-08T08:30:00",
        "notes": "Mon 16:30 +60min: 30min Mon, skip Tue holiday, 30min Wed = Wed 08:30"
      },
      {
        "id": "start_non_working",
        "start": "2025-01-06T06:00:00",
        "minutes": 60,
        "expected": "2025-01-06T09:00:00",
        "notes": "Before working hours, advances to 08:00 then +60 = 09:00"
      }
    ],
    "working_minutes": [
      {
        "id": "full_working_day",
        "start": "2025-01-06T00:00:00",
        "end": "2025-01-07T00:00:00",
        "expected": 540
      },
      {
        "id": "holiday",
        "start": "2025-01-07T00:00:00",
        "end": "2025-01-08T00:00:00",
        "expected": 0,
        "notes": "Tuesday is a holiday"
      },
      {
        "id": "full_week",
        "start": "2025-01-06T00:00:00",
        "end": "2025-01-13T00:00:00",
        "expected": 2400,
        "notes": "4 working days x 540 + Sat overtime 240 = 2400"
      }
    ],
    "allocations": [
      {
        "id": "non_splittable",
        "operation_id": "OP-1",
        "earliest_start": 480,
        "work_units": 120,
        "allow_split": false,
        "expected_start": 480,
        "expected_finish": 600,
        "expected_spans": [[480, 600]],
        "notes": "Mon 08:00 + 120min = Mon 10:00"
      },
      {
        "id": "splittable_across_gap",
        "operation_id": "OP-2",
        "earliest_start": 960,
        "work_units": 120,
        "allow_split": true,
        "expected_start": 960,
        "expected_work_units": 120,
        "expected_span_count": 2,
        "notes": "Mon 16:00 +120min: 60min Mon 16-17 + skip Tue + 60min Wed 08-09"
      }
    ]
  }
}
